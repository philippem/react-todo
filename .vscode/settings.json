{
  "eslint.enable": true,
  "eslint.options": {
    "ext": [".jsx", ".js"]
  },
   "javascript.validate.enable": false,
  "files.eol": "\n",
  "editor.tabSize": 2,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/.nyc_output": true,
    "**/.tmp": true,
    "**/coverage": true,
    "**/data": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/.tmp": true,
    "**/coverage": true,
    "**/data": true
  }
}
